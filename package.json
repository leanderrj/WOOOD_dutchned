{
  "name": "woood-delivery-date-picker",
  "version": "2.0.0",
  "description": "WOOOD Delivery Date Picker - Modern Shopify Checkout Extension with React Query, itty-router, and webhook-based architecture powered by Cloudflare Workers for global performance",
  "private": true,
  "scripts": {
    "dev": "cd workers && wrangler dev --env development",
    "dev:workers": "cd workers && wrangler dev --env development --port 8787",
    "dev:extensions": "shopify app dev --no-update",
    "dev:full": "concurrently \"yarn dev:workers\" \"yarn dev:extensions\" --names \"workers,extensions\" --prefix-colors \"blue,green\"",
    "dev:integrated": "concurrently \"yarn dev:workers\" \"wait-on https://localhost:8787/health && yarn dev:extensions\" --names \"workers,shopify\" --prefix-colors \"blue,green\" --kill-others-on-fail",
    "build": "yarn build:cloudflare",
    "build:cloudflare": "yarn build:workers",
    "build:complete": "yarn build:workers && yarn build:extensions:standalone && yarn build:frontend",
    "build:full": "yarn build:workers && yarn build:extensions && yarn build:frontend",
    "build:workers": "cd workers && yarn install && wrangler build",
    "build:frontend": "cd frontend && yarn install && yarn build",
    "build:extensions": "yarn build:date-picker && yarn build:shipping-method",
    "build:extensions:standalone": "yarn build:date-picker:standalone && yarn build:shipping-method:standalone",
    "build:date-picker": "cd extensions/date-picker && yarn install && yarn build",
    "build:date-picker:standalone": "cd extensions/date-picker && yarn install && yarn build:standalone",
    "build:shipping-method": "cd extensions/shipping-method && yarn install && yarn build",
    "build:shipping-method:standalone": "cd extensions/shipping-method && yarn install && yarn build:standalone",
    "deploy": "cd workers && wrangler deploy --env production",
    "deploy:dev": "cd workers && wrangler deploy --env development",
    "deploy:production": "cd workers && wrangler deploy --env production",
    "secrets:set": "cd workers && wrangler secret put",
    "config:validate": "shopify app validate",
    "extensions:dev": "shopify app dev",
    "extensions:deploy": "shopify app deploy",
    "logs": "cd workers && wrangler tail",
    "logs:dev": "cd workers && wrangler tail --env development",
    "logs:production": "cd workers && wrangler tail --env production",
    "health": "curl -k https://localhost:8787/health || exit 1",
    "health:production": "curl -f https://api.woood-delivery.com/health || exit 1",
    "clean": "yarn clean:workers && yarn clean:extensions",
    "clean:workers": "cd workers && rm -rf dist node_modules",
    "clean:extensions": "yarn clean:date-picker && yarn clean:shipping-method",
    "clean:date-picker": "cd extensions/date-picker && rm -rf dist node_modules",
    "clean:shipping-method": "cd extensions/shipping-method && rm -rf dist node_modules",
    "reset": "yarn clean && rm -rf node_modules && yarn install",
    "setup": "yarn install && yarn build:cloudflare",
    "type-check": "cd workers && yarn type-check && cd ../extensions/date-picker && yarn type-check"
  },
  "workspaces": [
    "workers",
    "extensions/date-picker",
    "extensions/shipping-method",
    "frontend"
  ],
  "keywords": [
    "shopify",
    "checkout",
    "extension",
    "delivery",
    "date-picker",
    "woood",
    "cloudflare",
    "workers",
    "react-query",
    "itty-router",
    "webhooks",
    "modern-architecture"
  ],
  "author": "WOOOD Development Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@shopify/polaris": "^12.0.0",
    "@shopify/polaris-icons": "^8.0.0",
    "@shopify/ui-extensions": "2024.10.x",
    "@shopify/ui-extensions-react": "^2024.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@shopify/app": "^3.58.2",
    "@shopify/cli": "^3.60.0",
    "@types/node": "^20.17.7",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "packageManager": "yarn@1.22.22"
}