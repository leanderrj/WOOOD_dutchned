{
  "name": "woood-delivery-date-picker",
  "version": "2.0.0",
  "description": "WOOOD Delivery Date Picker - Shopify Checkout Extension powered by Cloudflare Workers for global performance",
  "private": true,
  "scripts": {
    "build": "yarn build:workers && yarn build:extensions",
    "build:all": "yarn build:workers && yarn build:extensions",
    "build:workers": "cd workers && yarn install && wrangler build",
    "build:extensions": "yarn build:date-picker && yarn build:shipping-method",
    "build:date-picker": "cd extensions/date-picker && yarn install && yarn build",
    "build:shipping-method": "cd extensions/shipping-method && yarn install && yarn build",
    "deploy:workers:staging": "cd workers && wrangler deploy --env staging",
    "deploy:workers:production": "cd workers && wrangler deploy --env production",
    "deploy:workers:dry-run": "cd workers && wrangler deploy --dry-run",
    "deploy:workers:staging:dry-run": "cd workers && wrangler deploy --env staging --dry-run",
    "deploy:workers:production:dry-run": "cd workers && wrangler deploy --env production --dry-run",
    "dev:workers": "cd workers && wrangler dev",
    "dev:workers:remote": "cd workers && wrangler dev --remote",
    "workers:logs": "cd workers && wrangler tail",
    "workers:logs:staging": "cd workers && wrangler tail --env staging",
    "workers:logs:production": "cd workers && wrangler tail --env production",
    "workers:status": "cd workers && wrangler status",
    "workers:status:staging": "cd workers && wrangler status --env staging",
    "workers:status:production": "cd workers && wrangler status --env production",
    "workers:analytics": "cd workers && wrangler analytics",
    "workers:analytics:staging": "cd workers && wrangler analytics --env staging",
    "workers:analytics:production": "cd workers && wrangler analytics --env production",
    "workers:routes:list": "cd workers && wrangler routes list",
    "workers:routes:list:staging": "cd workers && wrangler routes list --env staging",
    "workers:routes:list:production": "cd workers && wrangler routes list --env production",
    "workers:secrets:list": "cd workers && wrangler secret list",
    "workers:secrets:list:staging": "cd workers && wrangler secret list --env staging",
    "workers:secrets:list:production": "cd workers && wrangler secret list --env production",
    "workers:kv:list": "cd workers && wrangler kv:namespace list",
    "workers:kv:keys": "cd workers && wrangler kv:key list --binding=DELIVERY_CACHE",
    "workers:kv:keys:staging": "cd workers && wrangler kv:key list --binding=DELIVERY_CACHE --env staging",
    "workers:kv:keys:production": "cd workers && wrangler kv:key list --binding=DELIVERY_CACHE --env production",
    "workers:health": "curl -f https://woood-delivery-api.workers.dev/health || exit 1",
    "workers:health:staging": "curl -f https://woood-delivery-api-staging.workers.dev/health || exit 1",
    "workers:health:production": "curl -f https://api.woood-delivery.com/health || exit 1",
    "workers:test:endpoints": "node scripts/test-workers-endpoints.js",
    "workers:test:endpoints:staging": "WORKER_ENV=staging node scripts/test-workers-endpoints.js",
    "workers:test:endpoints:production": "WORKER_ENV=production node scripts/test-workers-endpoints.js",
    "test:performance": "node scripts/performance-test.ts",
    "test:performance:load": "node scripts/performance-test.ts load",
    "test:integration": "node scripts/integration-test.js",
    "test:integration:api": "node scripts/integration-test.js api",
    "test:integration:workflow": "node scripts/integration-test.js workflow",
    "test:all": "yarn workers:test:endpoints && yarn test:integration && yarn test:performance",
    "workers:update": "cd workers && yarn add wrangler@latest @cloudflare/workers-types@latest",
    "install:all": "yarn install:workers && yarn install:extensions",
    "install:workers": "cd workers && yarn install",
    "install:extensions": "yarn install:date-picker && yarn install:shipping-method",
    "install:date-picker": "cd extensions/date-picker && yarn install",
    "install:shipping-method": "cd extensions/shipping-method && yarn install",
    "type-check": "yarn type-check:workers && yarn type-check:extensions",
    "type-check:workers": "cd workers && yarn type-check",
    "type-check:extensions": "yarn type-check:date-picker",
    "type-check:date-picker": "cd extensions/date-picker && yarn type-check",
    "type-check:shipping-method": "echo 'Shipping method function - no type check available'",
    "lint": "yarn lint:workers && yarn lint:extensions",
    "lint:workers": "cd workers && yarn lint || echo 'No lint script in workers'",
    "lint:extensions": "yarn lint:date-picker",
    "lint:date-picker": "cd extensions/date-picker && yarn lint || echo 'No lint script in date-picker'",
    "clean": "yarn clean:workers && yarn clean:extensions",
    "clean:all": "yarn clean && rm -rf node_modules",
    "clean:workers": "cd workers && rm -rf dist node_modules",
    "clean:extensions": "yarn clean:date-picker && yarn clean:shipping-method",
    "clean:date-picker": "cd extensions/date-picker && rm -rf dist node_modules",
    "clean:shipping-method": "cd extensions/shipping-method && rm -rf dist node_modules",
    "reset": "yarn clean:all && yarn install:all",
    "setup": "yarn install:all && yarn build:all",
    "setup:workers": "yarn install:workers && yarn build:workers",
    "setup:extensions": "yarn install:extensions && yarn build:extensions",
    "validate": "yarn type-check && yarn lint && yarn build",
    "ci:build": "yarn install:all --frozen-lockfile && yarn validate",
    "ci:deploy:staging": "yarn ci:build && yarn deploy:workers:staging && yarn shopify:deploy:development",
    "ci:deploy:production": "yarn ci:build && yarn deploy:workers:production && yarn shopify:deploy:production",
    "release:staging": "echo 'Deploying to staging...' && yarn ci:deploy:staging && yarn workers:health:staging",
    "release:production": "echo 'Deploying to production...' && yarn ci:deploy:production && yarn workers:health:production",
    "monitor": "node scripts/monitor-workers.js",
    "monitor:staging": "WORKER_ENV=staging node scripts/monitor-workers.js",
    "monitor:production": "WORKER_ENV=production node scripts/monitor-workers.js",
    "backup:kv": "node scripts/backup-kv-data.js",
    "backup:kv:staging": "WORKER_ENV=staging node scripts/backup-kv-data.js",
    "backup:kv:production": "WORKER_ENV=production node scripts/backup-kv-data.js",
    "shopify": "shopify",
    "shopify:config:use:development": "shopify app config use shopify.app.development.toml",
    "shopify:config:use:production": "shopify app config use shopify.app.toml",
    "shopify:dev": "yarn shopify:config:use:development && shopify app dev --no-update",
    "shopify:deploy:development": "yarn shopify:config:use:development && shopify app deploy",
    "shopify:deploy:production": "yarn shopify:config:use:production && shopify app deploy",
    "shopify:deploy": "yarn shopify:deploy:production",
    "shopify:info": "shopify app info"
  },
  "workspaces": [
    "workers",
    "extensions/date-picker",
    "extensions/shipping-method"
  ],
  "keywords": [
    "shopify",
    "checkout",
    "extension",
    "delivery",
    "date-picker",
    "woood",
    "cloudflare",
    "workers"
  ],
  "author": "WOOOD Development Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@shopify/app-bridge-react": "^4.1.5",
    "@shopify/polaris": "^13.8.0",
    "@shopify/polaris-icons": "^9.3.0",
    "@shopify/ui-extensions": "2025.4.x",
    "@shopify/ui-extensions-react": "^2025.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@shopify/app": "^3.58.2",
    "@shopify/app-bridge-types": "^0.0.15",
    "@shopify/cli": "^3.81.2",
    "@types/node": "^20.17.7",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}