{
  "name": "woood-delivery-date-picker",
  "version": "1.0.0",
  "description": "WOOOD Delivery Date Picker - Shopify Checkout Extension with Cloudflare Workers backend",
  "private": true,
  "scripts": {
    "build": "yarn build:workers && yarn build:extensions",
    "build:all": "yarn build:backend && yarn build:workers && yarn build:extensions",
    "build:backend": "cd backend && yarn install && yarn build",
    "build:workers": "cd workers && yarn install && wrangler build",
    "build:extensions": "yarn build:date-picker && yarn build:shipping-method",
    "build:date-picker": "cd extensions/date-picker && yarn install && yarn build",
    "build:shipping-method": "cd extensions/shipping-method && yarn install && yarn build",
    "deploy:workers:staging": "cd workers && wrangler deploy --env staging",
    "deploy:workers:production": "cd workers && wrangler deploy --env production",
    "dev:workers": "cd workers && wrangler dev",
    "workers:logs": "cd workers && wrangler tail",
    "vercel-build": "yarn install:backend && yarn build:backend",
    "install:backend": "cd backend && yarn install",
    "install:workers": "cd workers && yarn install",
    "install:extensions": "yarn install:date-picker && yarn install:shipping-method",
    "install:date-picker": "cd extensions/date-picker && yarn install",
    "install:shipping-method": "cd extensions/shipping-method && yarn install",
    "type-check": "yarn type-check:backend && yarn type-check:workers && yarn type-check:extensions",
    "type-check:backend": "cd backend && yarn build",
    "type-check:workers": "cd workers && yarn type-check",
    "type-check:extensions": "yarn type-check:date-picker",
    "type-check:date-picker": "cd extensions/date-picker && yarn type-check",
    "type-check:shipping-method": "echo 'Shipping method function - no type check available'",
    "clean": "yarn clean:backend && yarn clean:workers && yarn clean:extensions",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "clean:workers": "cd workers && rm -rf dist node_modules",
    "clean:extensions": "yarn clean:date-picker && yarn clean:shipping-method",
    "clean:date-picker": "cd extensions/date-picker && rm -rf dist node_modules",
    "clean:shipping-method": "cd extensions/shipping-method && rm -rf dist node_modules",
    "shopify": "shopify",
    "shopify:config:use:development": "shopify app config use shopify.app.development.toml",
    "shopify:config:use:production": "shopify app config use shopify.app.toml",
    "shopify:dev": "yarn shopify:config:use:development && shopify app dev --no-update",
    "shopify:deploy:development": "yarn shopify:config:use:development && shopify app deploy",
    "shopify:deploy:production": "yarn shopify:config:use:production && shopify app deploy",
    "shopify:deploy": "yarn shopify:deploy:production",
    "shopify:info": "shopify app info"
  },
  "workspaces": [
    "backend",
    "workers",
    "extensions/date-picker",
    "extensions/shipping-method"
  ],
  "keywords": [
    "shopify",
    "checkout",
    "extension",
    "delivery",
    "date-picker",
    "woood",
    "cloudflare",
    "workers"
  ],
  "author": "WOOOD Development Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@shopify/app-bridge-react": "^4.1.5",
    "@shopify/polaris": "^13.8.0",
    "@shopify/polaris-icons": "^9.3.0",
    "@shopify/ui-extensions": "2025.4.x",
    "@shopify/ui-extensions-react": "^2025.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@shopify/app": "^3.58.2",
    "@shopify/app-bridge-types": "^0.0.15",
    "@shopify/cli": "^3.81.2",
    "@types/node": "^20.17.7",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}